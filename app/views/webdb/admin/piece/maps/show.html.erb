<%= render 'shared/admin/piece/show' do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :target_db_id %></th>
    <td><%= @item.target_db.try(:title) %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :window_text %></th>
    <td><%= hbr(@item.window_text) if @item.window_text.present? %></td>
  </tr>
</table>
<%- end -%>
